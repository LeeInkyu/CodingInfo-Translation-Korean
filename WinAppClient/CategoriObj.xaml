<UserControl x:Class="WinAppClient.CategoriObj"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinAppClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="180" Height="100" Background="White" HorizontalAlignment="Center">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Image HorizontalAlignment="Left" Height="100" Margin="0" VerticalAlignment="Top" Width="80"/>
        <Label x:Name="LB_Name" Content="Label" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="70" Height="30" FontSize="16" Loaded="LB_Name_Loaded" FontFamily="KoPubDotum Light"/>


    </Grid>
</UserControl>
