<UserControl x:Class="WinAppClient.SearchResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinAppClient"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="530" Background="White" Width="530" Height="200">
    <Grid Width="530" Height="200">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.75*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBox x:Name="TBX_Title" BorderThickness="0" Margin="20,10" TextWrapping="Wrap" Text="Title" FontSize="40" FontFamily="KoPubDotum Bold"/>
        <TextBox x:Name="TBX_Content" BorderThickness="0" Margin="20,10" TextWrapping="Wrap" Text="Content" FontSize="20" FontFamily="KoPubDotum Medium" Grid.Row="1" Background="White" Foreground="#FF888888"/>

        <TextBox x:Name="TBX_Author" BorderThickness="0" Margin="20,10" TextWrapping="Wrap" Text="Author" FontSize="20" FontFamily="KoPubDotum Medium" Grid.Column="1" Foreground="#FF606060"/>

    </Grid>
</UserControl>
